@article{Ollerton2017,
author = {Ollerton, Jeff},
title = {Pollinator Diversity: Distribution, Ecological Function, and Conservation},
journal = {Annual Review of Ecology, Evolution, and Systematics},
volume = {48},
number = {1},
pages = {353-376},
year = {2017},
doi = {10.1146/annurev-ecolsys-110316-022919},
